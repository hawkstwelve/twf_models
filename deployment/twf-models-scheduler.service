[Unit]
Description=TWF Models Scheduler
After=network.target

[Service]
Type=simple
User=root
Group=root
WorkingDirectory=/opt/twf_models
Environment="PYTHONPATH=/opt/twf_models/backend"
ExecStart=/opt/twf_models/venv/bin/python3 -m app.scheduler
Restart=always
RestartSec=10
StandardOutput=append:/var/log/twf-models-scheduler.log
StandardError=append:/var/log/twf-models-scheduler-error.log

[Install]
WantedBy=multi-user.target
